url = {https://www.sciencedirect.com/science/article/pii/S0191886924002769},
author = {Anja Leue and Fee-Elisabeth Bertram},
keywords = {Online Gudjonsson Suggestibility Scale 1 (GSS 1), Working memory ability, Suggestibility, Conflict monitoring},
abstract = {This study investigates psychometric properties and construct validity of the German online Gudjonsson Suggestibility Scale 1 (GSS 1). In Study 1, N = 206 participants performed the online GSS 1. The number of immediately, correctly recalled details of the GSS 1 story indicated sufficient psychometric properties and was negatively correlated with suggestibility subscales (Yield 1, Yield 2, and Shift). In Study 2, N = 101 participants performed the online GSS 1, the online working memory ability test of the Intelligence-Structure-Test 2000 R, and the online Conflict-Monitoring-Questionnaire (CMQ-28). Individual differences of working memory ability measured by means of GSS 1 story recall and the Intelligence-Structure-Test 2000 R emerged to be convergent constructs. Individual differences of working memory ability and suggestibility are diverging constructs correlating either negatively or non-significantly. Individual differences of suggestibility and CMQ-28 subscales are widely diverging constructs correlating mainly non-significantly despite sufficient a-priori calculated sample size. The present results on individual differences of working memory ability, suggestibility and CMQ-conflict monitoring contribute to the investigation of convergent and discriminant validity in a non-forensic domain with a low level of social pressure. Neuro-cognitive mechanisms of these performance and personality dimensions remain to be investigated.}
}
@article{GUO2026105814,
title = {HAZOP knowledge graph construction: Dual optimization of ontology design and information extraction},
journal = {Journal of Loss Prevention in the Process Industries},
volume = {99},
pages = {105814},
year = {2026},
issn = {0950-4230},
doi = {https://doi.org/10.1016/j.jlp.2025.105814},
url = {https://www.sciencedirect.com/science/article/pii/S0950423025002724},
author = {Shaoqian Guo and Dong Gao and Duhui Lu and Mukai Wang},
keywords = {Knowledge graph, Process safety knowledge management, Information extraction, Hazard and operability analysis, Large language model},
abstract = {Process safety knowledge management is crucial for ensuring safe production in the chemical industry. The Hazard and Operability (HAZOP) systematic safety analysis table encapsulates the collective wisdom of experts. While knowledge graph technology exists for building HAZOP safety knowledge bases, two challenges remain: limitations in ontology design for representation of hazard propagation paths, and suboptimal performance or training efficiency of deep learning models for knowledge extraction. To address these challenges, this study proposes an innovative method for constructing a HAZOP knowledge graph(HPKG). First, by referring to the Scenario Object Model and the international standard IEC 61882, we propose a HAZOP Hazard Scenario Ontology (HHSO) that realizes a pattern layer capable of comprehensively representing complex pathways among various hazardous events. Second, we develop a Multi-Feature Fusion Named Entity Recognition Model (MFFNM) specifically designed for Chinese HAZOP texts, which incorporates character-level features, matched words, and Chinese radicals within an enhanced Transformer architecture for semantic fusion, thereby establishing the data layer of the knowledge graph. Experimental results on a dataset constructed from several real-world HAZOP reports show that MFFNM achieves 93.21% precision, 92.86% recall, and 93.03% F1-score with a training speed of 195.11 steps per second, outperforming existing HAZOP information extraction models. Finally, in the case analysis, by incorporating large language models and prompt-based frameworks, we further showcased the potential and capabilities of HPKG in practical applications. This methodology provides a viable solution for enhancing HAZOP knowledge management and supporting hazard prevention.}
}
@article{ZHANG2025111155,
title = {A privacy protection scheme to resist ring selection attack in peer-to-peer double auction V2V electricity transaction for charging stations},
journal = {Electric Power Systems Research},
volume = {238},
pages = {111155},
year = {2025},
issn = {0378-7796},
doi = {https://doi.org/10.1016/j.epsr.2024.111155},
url = {https://www.sciencedirect.com/science/article/pii/S0378779624010411},
author = {Shaomin Zhang and Xu Wang and Baoyi Wang},
keywords = {V2V electricity transaction, Privacy protection, Ring signcryption, Ring selection attack, Charging station},
abstract = {With the development of Electric Vehicles (EVs), the number of public charging piles cannot meet the immediate charging needs of EV users sometimes. The charging stations provide flexible electricity transaction schemes for users by managing charging piles and Vehicle-to-Vehicle (V2V). Users can freely choose transaction partners and submit transaction plans to multiple charging stations. The mobility of EVs results in users randomly selecting rings multiple times, which may cause them to appear in different rings. Attackers can link multiple transaction plans and infer user privacy information. The leakage of transaction information may threaten the fairness of transactions. Aiming at the above situations, a privacy protection scheme to resist ring selection attack in Peer-to-Peer double auction V2V electricity transaction for charging stations is proposed. Firstly, the ring signcryption algorithm is improved to resist ring selection attack. Secondly, a real identity verification algorithm is designed to track malicious users. Theoretical analysis proves that the security of the proposed privacy protection scheme. The elliptic curve point multiplication is used in the scheme to improve computational efficiency. Experiments show that this scheme has low computational and communication costs. Verification cost increases slowly with the increase of the number of ring members.}
}
